{
  "name": "amex-jest-preset",
  "description": "An opinionated Jest preset",
  "version": "4.0.2",
  "keywords": [
    "jest",
    "preset",
    "amex",
    "quality"
  ],
  "scripts": {
    "test": "jest",
    "posttest": "npm run lint",
    "lint": "eslint ./ --ignore-path .gitignore --ext .js",
    "prepublishOnly": "npm test && rm -f jest-preset.json",
    "postinstall": "node create-jest-preset.js"
  },
  "dependencies": {
    "jest-json-schema": "^1.2.0",
    "mkdirp": "^0.5.1",
    "strip-ansi": "^3.0.1",
    "xmlbuilder": "^9.0.0"
  },
  "devDependencies": {
    "amex-jest-preset": ".",
    "eslint": "^3.19.0",
    "eslint-config-amex": "^6.0.0",
    "jest": "^20.0.0",
    "lodash": "^4.17.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/americanexpress/amex-jest-preset.git"
  },
  "files": [
    "create-jest-preset.js",
    "jest-preset.json",
    "jest-setup.js",
    "html-report-creator.js",
    "html-report-style.js"
  ],
  "contributors": [
    "Andres Escobar",
    "Jimmy King"
  ],
  "author": "Andres Escobar <andres.escobar@aexp.com> (https://github.com/anescobar1991)",
  "license": "Apache-2.0",
  "jest": {
    "preset": "amex-jest-preset",
    "coveragePathIgnorePatterns": [
      "<rootDir>/jest-setup.js"
    ]
  }
}

{
  "setupTestFrameworkScriptFile": "<rootDir>/node_modules/amex-jest-preset/jest-setup.js",
  "collectCoverage": true,
  "collectCoverageFrom": [
    "**/*.js",
    "!**/node_modules/**",
    "!build/**",
    "!dist/**",
    "!lib/**",
    "!test-results/**"
  ],
  "coverageDirectory": "./test-results/coverage",
  "coverageReporters": [
    "text",
    "lcov",
    "cobertura"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    }
  },
  "modulePathIgnorePatterns": []
}
